      <!-- User Section -->
      <div class="user-section">
        <!-- Chatbot -->
        <div class="chatbot-container">
          <button class="chatbot-button" id="chatbotButton" aria-expanded="false">
            <img src="/bot.png" alt="chatbot assistant" width="28" height="28"/>
          </button>
          <div class="chatbot-content" id="chatbotContent">
            <p><%= community.description %>.</p>
          </div>
        </div>
        
