       <% if (currUser && currUser.communityId === communityId) { %>
        <div class="profile-menu-user">
          <div class="dropdown">
            <button class="dropdown-toggle profile-button" type="button" id="profileDropdown" aria-expanded="false">
              <img src="<%= currUser.image.url %>" alt="Profile Picture" class="profile-image">
            </button>
            <ul class="dropdown-menu" id="profileMenu">
              <li><a class="dropdown-item" href="/community/<%= community.id %>/<%= currUser.id %>/showProfile">Profile</a></li>
              <li><a class="dropdown-item" href="/community/<%= community.id %>/logout">Logout</a></li>
