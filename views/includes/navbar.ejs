<style>
    body {
      background-color: blanchedalmond;
      padding-top: 140px;
    }
    header {
      background-color: #fee4bd;
      border-bottom: 1px solid #f9d8a6;
      padding: 10px 15px;
      width: 100%;
      position: fixed;
      top: 0;
      z-index: 1000;
    }
    .header-logo {
      font-weight: bold;
      font-size: 1.5rem;
      color: #A82400;
      text-decoration: none;
    }
    
    /* Enhanced chatbot styles */
    .chatbot-container {
      position: relative;
      margin-left: 64rem;
      margin-right: 35px;
    }
    
    .chatbot-button {
      display: flex;
      align-items: center;
      background: linear-gradient(135deg, #ffd280, #ffc267);
      border-radius: 50%;
      cursor: pointer;
      transition: all 0.3s ease;
      border: 2px solid #ffc267;
      padding: 5px;
      width: 45px;
      height: 45px;
    }
    
    .chatbot-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(234, 140, 0, 0.2);
      border-color: #ea8c00;
    }
    
    .chatbot-content {
      position: absolute;
      top: 100%;
      right: 0;
      min-width: 250px;
      background-color: #fee4bd;
      border: 1px solid #f9d8a6;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 1rem;
      margin-top: 0.5rem;
      display: none;
      z-index: 1000;
    }
    
    .chatbot-content.show {
      display: block;
    }
    
    /* Navigation and other styles */
    .nav-icons {
      gap: 40px;
      margin-left: 15rem;
    }
    .nav-icons svg {
      margin: 0 40px;
      cursor: pointer;
      gap: 23px;
      color: #ea8c00;
    }
    .nav-icons svg.active {
      color: #ff5733;
    }
    .profile-menu {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 40px;
      width: 40px;
      border: 1px solid #ffc267;
      border-radius: 50%;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      background-color: #ffc267;
      padding: 5px;
    }
    
    .profile-menu img {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
    }
    .profile-menu-user {
      position: relative;
    }
    .profile-menu-user img {
      border-radius: 50%;
      width: 38px;
      height: 38px;
    }
    .profile-button {
      background: none;
      border: none;
      padding: 0;
      cursor: pointer;
      transition: transform 0.2s ease;
    }
    .profile-button:hover {
      transform: scale(1.1);
    }
    .profile-image {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      object-fit: cover;
      border: 3px solid #A82400;
      box-shadow: 0 4px 6px rgba(168, 36, 0, 0.2);
      transition: all 0.3s ease;
    }
    .profile-button:hover .profile-image {
      border-color: #ff5733;
      box-shadow: 0 6px 8px rgba(255, 87, 51, 0.3);
    }
    .profile-image:hover {
      transform: scale(1.1);
    }
    .img-company {
      height: 30px; 
      width: 30px; 
      border-radius: 50%; 
      margin-left: 100%;
    }
    .dropdown-menu {
      background-color: #fee4bd;
      border: 1px solid #f9d8a6;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      border-radius: 12px;
      margin-top: 0.5rem;
      padding: 0.5rem 0;
      min-width: 220px;
      animation: dropdown-slide 0.3s ease;
      transform-origin: top;
    }
    .dropdown-item {
      color: #A82400;
      padding: 0.75rem 1.25rem;
      transition: all 0.2s ease;
      display: flex;
      align-items: center;
      gap: 15px;
    }
    .dropdown-item:hover {
      background-color: rgba(255, 228, 189, 0.7);
      color: #ff5733;
    }
    .dropdown-item svg {
      width: 20px;
      height: 20px;
      color: #A82400;
      transition: color 0.2s ease;
    }
    .dropdown-item:hover svg {
      color: #ff5733;
    }
    .dropdown-toggle::after {
      display: none;
    }
    .d-flex {
      display: flex;
      align-items: center;
      justify-content: flex-start;
      margin-top: 15px;
      width: 100%;
    }

    @keyframes dropdown-slide {
      from {
          opacity: 0;
          transform: scaleY(0.8);
      }
      to {
          opacity: 1;
          transform: scaleY(1);
      }
    }
    
    @media (max-width: 1334px) {
      .header-logo {
        font-size: 1.25rem;
      }
      .profile-menu{
        height: 44px;
        width: 44px;
      }
      .profile-menu-user {
        margin-left: auto;
      }
      .profile-button svg{
        height: 32px;
        width: 33px;
        color: #ea8c00;
      }
      .nav-icons {
        gap: 10%;
        margin-left: 8%;
      }
      .nav-icons svg {
        margin: 0 100%;
      }
      .img-company {
        margin-left: 10%;
      }
      .chatbot-container {
        margin-left: auto;
      }
    }
    
    @media (max-width: 480px) {
      .header-logo {
        font-size: 1.1rem;
      }
      .profile-menu {
        width: 43px;
        height: 43px;
      }
      .profile-menu-user {
        margin-left: auto;
      }
      .profile-menu-user img {
        margin-left: auto;
        width: 30px;
        height: 30px;
      }
      .profile-button svg{
        height: 33px;
        width: 31px;
        color: #A82400;
      }
      .dropdown-toggle {
        width: 30px;
      }
      .nav-icons {
        gap: 8%;
        margin-right: 0%;
        margin-left: 0%;
      }
      .nav-icons svg {
        margin: 0 80%;
        color: #A82400;
      }
      .chatbot-container {
        margin-left: 35%;
        margin-right: 9%;
      }
    }
  </style>
</head>
<body>
  <header id="">
    <!-- Logo -->
    <div class="d-flex" style="margin-bottom: 25px; margin-top: 15px;">
      <a href="https://<%= community.title %>.com" class="header-logo">
        <% if (community.thumbnail && community.thumbnail.url) { %>
          <div style="display: flex; gap: 10px;">
            <img src="<%= community.thumbnail.url %>" alt="company logo" class="img-company">
            <h1 class="text-lg font-semibold"><%= community.title %></h1>
          </div>
        <% } else { %>
          <div class="w-10 h-10 rounded-full mr-3 bg-gray-300 flex items-center justify-center">
            <i class="fas fa-users text-white"></i>
          </div>
        <% } %>
      </a>  
      
      <!-- Chatbot -->
      <div class="chatbot-container">
        <button class="chatbot-button" id="chatbotButton" aria-expanded="false">
          <img src="/bot.png" alt="chatbot assistant" width="34" height="34"/>
        </button>
        <div class="chatbot-content" id="chatbotContent">
          <p><%= community.description %></p>
        </div>
      </div>
      
      <% if (currUser && currUser.communityId === communityId) { %>
        <div class="profile-menu-user" style="display: block;">
          <div class="dropdown">
            <button class="dropdown-toggle profile-button" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              <img src="<%= currUser.image.url %>" alt="Profile Picture" style="margin-top: 7.5%;" class="profile-image">
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/community/<%= community.id %>/<%= currUser.id %>/showProfile">Profile</a></li>
              <li><a class="dropdown-item" href="/community/<%= community.id %>/logout">Logout</a></li>
            </ul>
          </div>
        </div>
      <% } else { %>
        <div class="profile-menu" style="display: block;">
          <div class="dropdown">
            <button class="dropdown-toggle profile-button" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              <svg xmlns="http://www.w3.org/2000/svg" width="30px" height="30px" fill="currentColor" class="bi bi-person-fill-lock" viewBox="0 0 16 16">
