  <style>
    /* Base styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      background-color: blanchedalmond;
      padding-top: 80px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    /* Header styles */
    header {
      background-color: #fee4bd;
      border-bottom: 1px solid #f9d8a6;
      padding: 12px 20px;
      width: 100%;
      position: fixed;
      top: 0;
      z-index: 1000;
      box-shadow: 0 2px 10px rgba(234, 140, 0, 0.1);
      transition: all 0.3s ease;
    }
    
    /* Header container */
    .header-container {
      display: flex;
      align-items: center;
      justify-content: space-between;
      max-width: 1200px;
      margin: 0 auto;
    }
    
    /* Logo styling */
    .brand-section {
      display: flex;
      align-items: center;
    }
    
    .header-logo {
      font-weight: bold;
      font-size: 1.4rem;
      color: #A82400;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 10px;
      transition: transform 0.2s ease;
    }
    
    .header-logo:hover {
      transform: translateY(-1px);
    }
    
    .img-company {
      height: 32px; 
      width: 32px; 
      border-radius: 50%;
      border: 2px solid rgba(168, 36, 0, 0.2);
      object-fit: cover;
    }
    
    /* Navigation section */
    .nav-section {
      display: flex;
      align-items: center;
      flex-grow: 1;
      justify-content: center;
    }
    
    .nav-icons {
      display: flex;
      gap: 2rem;
      margin: 0;
    }
    
    .nav-icon {
      color: #ea8c00;
      transition: all 0.3s ease;
      padding: 8px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .nav-icon:hover {
      color: #ff5733;
      background-color: rgba(255, 228, 189, 0.7);
      transform: translateY(-2px);
    }
    
    .nav-icon.active {
      color: #ff5733;
      background-color: rgba(255, 228, 189, 0.7);
    }
    
    /* User section */
    .user-section {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    
    /* Chatbot styles */
    .chatbot-container {
      position: relative;
    }
    
    .chatbot-button {
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #ffd280, #ffc267);
      border-radius: 50%;
      cursor: pointer;
      transition: all 0.3s ease;
      border: 2px solid #ffc267;
      padding: 5px;
      width: 42px;
      height: 42px;
      box-shadow: 0 2px 5px rgba(234, 140, 0, 0.15);
    }
    
    .chatbot-button:hover {
      transform: translateY(-2px) scale(1.05);
      box-shadow: 0 4px 8px rgba(234, 140, 0, 0.2);
      border-color: #ea8c00;
    }
    
    .chatbot-content {
      position: absolute;
      top: 100%;
      right: 0;
      min-width: 250px;
      background-color: #fee4bd;
      border: 1px solid #f9d8a6;
      border-radius: 12px;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      padding: 1rem;
      margin-top: 0.75rem;
      display: none;
      z-index: 1000;
      animation: fadeIn 0.3s ease;
    }
    
    .chatbot-content.show {
      display: block;
    }
    
    /* Profile styles */
    .profile-menu-user {
      position: relative;
    }
    
    .profile-button {
      background: none;
      border: none;
      padding: 0;
      cursor: pointer;
      transition: transform 0.2s ease;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .profile-button:hover {
      transform: scale(1.05);
    }
    
    .profile-image {
      width: 42px;
      height: 42px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid #A82400;
      box-shadow: 0 2px 5px rgba(168, 36, 0, 0.15);
      transition: all 0.3s ease;
    }
    
    .profile-button:hover .profile-image {
      border-color: #ff5733;
      box-shadow: 0 4px 8px rgba(255, 87, 51, 0.2);
    }
    
    .profile-menu {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 42px;
      width: 42px;
      border-radius: 50%;
      background-color: #ffc267;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }
    
    .profile-menu:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }
    
    .dropdown-menu {
      background-color: #fee4bd;
      border: 1px solid #f9d8a6;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      border-radius: 12px;
      margin-top: 0.5rem;
      padding: 0.5rem 0;
      min-width: 180px;
      transform-origin: top;
      animation: dropdown-slide 0.3s ease;
      display: none;
      position: absolute;
      right: 0;
      z-index: 1001;
    }
    
    .dropdown-menu.show {
      display: block;
    }
    
    .dropdown-item {
      color: #A82400;
      padding: 0.75rem 1.25rem;
      transition: all 0.2s ease;
      display: flex;
      align-items: center;
      gap: 15px;
      text-decoration: none;
    }
    
    .dropdown-item:hover {
      background-color: rgba(255, 228, 189, 0.7);
      color: #ff5733;
    }
    
    @keyframes dropdown-slide {
      from {
        opacity: 0;
        transform: scaleY(0.8);
      }
      to {
        opacity: 1;
        transform: scaleY(1);
      }
    }
    
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
    
    /* Media Queries */
    @media (max-width: 768px) {
      .header-container {
        flex-wrap: wrap;
      }
      
      .nav-section {
        order: 3;
        width: 100%;
        margin-top: 10px;
      }
      
      .nav-icons {
        width: 100%;
        justify-content: space-around;
        gap: 0.5rem;
      }
      
      .user-section {
        margin-left: auto;
      }
      
      .header-logo {
        font-size: 1.2rem;
      }
    }
    
    @media (max-width: 480px) {
      body {
        padding-top: 120px;
      }
      
      header {
        padding: 10px;
      }
      
      .img-company {
        height: 28px;
        width: 28px;
      }
      
      .profile-image, .profile-menu {
        width: 38px;
        height: 38px;
      }
      
      .chatbot-button {
        width: 38px;
        height: 38px;
      }
      
      .nav-icon {
        padding: 5px;
      }
    }
  </style>
</head>
