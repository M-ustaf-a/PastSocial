        function scrollToCompanies() {
            document.getElementById('companies').scrollIntoView({ 
                behavior: 'smooth' 
            });
        }

        // View switching functionality (only if companies exist)
        function switchView(viewType) {
            const grid = document.getElementById('companiesGrid');
            if (!grid) return;
            
            const toggleBtns = document.querySelectorAll('.toggle-btn');
            
            toggleBtns.forEach(btn => btn.classList.remove('active'));
            event.target.closest('.toggle-btn').classList.add('active');
            
            if (viewType === 'list') {
                grid.classList.add('list-view');
            } else {
                grid.classList.remove('list-view');
            }
        }

        // Stats counter animation
        function animateCounters() {
            const counters = document.querySelectorAll('[data-count]');
            
            counters.forEach(counter => {
                const target = parseInt(counter.getAttribute('data-count'));
                const duration = 2000;
                const step = target / (duration / 16);
                let current = 0;
                
                const timer = setInterval(() => {
                    current += step;
                    if (current >= target) {
                        counter.textContent = target.toLocaleString();
                        clearInterval(timer);
                    } else {
                        counter.textContent = Math.floor(current).toLocaleString();
                    }
                }, 16);
            });
        }

        // Intersection Observer for animations
        function setupAnimations() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        if (entry.target.classList.contains('stats-section')) {
                            animateCounters();
                        }
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            // Observe elements for animation
            document.querySelectorAll('.stats-section, .company-card').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(30px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });
        }

        // Enhanced scroll effects
        function setupScrollEffects() {
            window.addEventListener('scroll', () => {
                const scrolled = window.pageYOffset;
                const parallax = document.querySelector('.geometric-pattern');
                
                if (parallax) {
                    parallax.style.transform = `translateY(${scrolled * 0.1}px)`;
                }
            });
        }

        // Search functionality for existing companies
        function setupSearch() {
            const grid = document.getElementById('companiesGrid');
            if (!grid || grid.querySelector('.empty-state')) {
                return; // Don't add search if no companies exist
            }

            const searchInput = document.createElement('input');
            searchInput.type = 'text';
            searchInput.placeholder = 'Search companies...';
            searchInput.className = 'search-input';
            searchInput.style.cssText = `
                background: var(--white);
                border: 2px solid var(--hover-bg);
                padding: 0.75rem 1rem;
                border-radius: var(--radius-md);
                font-family: inherit;
                font-size: 0.9rem;
                transition: all 0.3s ease;
                width: 250px;
            `;
            
            searchInput.addEventListener('focus', () => {
                searchInput.style.borderColor = 'var(--primary-color)';
                searchInput.style.boxShadow = '0 0 0 3px rgba(168, 36, 0, 0.1)';
            });
            
            searchInput.addEventListener('blur', () => {
                searchInput.style.borderColor = 'var(--hover-bg)';
                searchInput.style.boxShadow = 'none';
            });
            
            searchInput.addEventListener('input', (e) => {
                filterCompanies(e.target.value);
            });
            
            // Add search to page actions
            const pageActions = document.querySelector('.page-actions');
            if (pageActions) {
                pageActions.insertBefore(searchInput, pageActions.firstChild);
            }
        }

        // Filter companies based on search
        function filterCompanies(searchTerm) {
            const companyCards = document.querySelectorAll('.company-card');
            let visibleCount = 0;
            
            companyCards.forEach(card => {
                const name = card.querySelector('.company-name')?.textContent.toLowerCase() || '';
                const description = card.querySelector('.company-description')?.textContent.toLowerCase() || '';
                const category = card.querySelector('.company-category')?.textContent.toLowerCase() || '';
                
                const matches = name.includes(searchTerm.toLowerCase()) ||
                               description.includes(searchTerm.toLowerCase()) ||
                               category.includes(searchTerm.toLowerCase());
                
                if (matches || searchTerm.trim() === '') {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });
            
            // Show no results message if needed
            const grid = document.getElementById('companiesGrid');
            let noResultsMsg = grid.querySelector('.no-results');
            
            if (visibleCount === 0 && searchTerm.trim() !== '') {
                if (!noResultsMsg) {
                    noResultsMsg = document.createElement('div');
                    noResultsMsg.className = 'no-results empty-state';
                    noResultsMsg.innerHTML = `
                        <div class="empty-illustration">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="11" cy="11" r="8"/>
                                <path d="M21 21l-4.35-4.35"/>
                            </svg>
                        </div>
                        <h3 class="empty-title">No Results Found</h3>
                        <p class="empty-description">
                            Try adjusting your search terms or browse all companies.
                        </p>
                    `;
                    grid.appendChild(noResultsMsg);
                }
                noResultsMsg.style.display = 'block';
            } else if (noResultsMsg) {
                noResultsMsg.style.display = 'none';
            }
        }

        // Keyboard shortcuts
        function setupKeyboardShortcuts() {
            document.addEventListener('keydown', (e) => {
                // Ctrl/Cmd + K for search focus
                if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                    e.preventDefault();
                    const searchInput = document.querySelector('.search-input');
                    if (searchInput) {
                        searchInput.focus();
                    }
                }
                
                // Escape to clear search
                if (e.key === 'Escape') {
                    const searchInput = document.querySelector('.search-input');
                    if (searchInput && searchInput === document.activeElement) {
                        searchInput.value = '';
                        filterCompanies('');
                        searchInput.blur();
                    }
                }
            });
        }

        // Update stats based on actual data
        function updateStats() {
            const companies = document.querySelectorAll('.company-card');
            const companyCount = companies.length;
            
            // Update the stats dynamically
            const statNumbers = document.querySelectorAll('.stat-number');
            if (statNumbers[0]) statNumbers[0].setAttribute('data-count', companyCount);
            
            // Count unique categories
            const categories = new Set();
            companies.forEach(card => {
                const category = card.querySelector('.company-category')?.textContent;
                if (category) categories.add(category);
            });
            
            if (statNumbers[1]) statNumbers[1].setAttribute('data-count', categories.size);
        }

        // Initialize everything
        document.addEventListener('DOMContentLoaded', () => {
            updateStats();
            setupAnimations();
            setupScrollEffects();
            setupSearch();
            setupKeyboardShortcuts();
            
            // Add loading state simulation
            setTimeout(() => {
                document.body.style.opacity = '1';
            }, 100);
        });

        // Add initial loading state
        document.body.style.opacity = '0';
        document.body.style.transition = 'opacity 0.3s ease';
    </script>
