<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <title><%=community.title%></title>
    <style>
        body {
            background-color: blanchedalmond;
            padding-top: 120px;
        }
        header {
            background-color: #fee4bd;
            border-bottom: 1px solid #f9d8a6;
            padding: 10px 15px;
            width: 100%;
            position: fixed;
            top: 0; 
            z-index: 1000;
        }
        .header-logo {
            font-weight: bold;
            font-size: 1.5rem;
            color: #A82400;
            text-decoration: none;
        }
        .nav-icons{
            gap: 40px;
            margin-left: 15rem;
        }
        .nav-icons svg {
            margin: 0 40px;
            cursor: pointer;
            gap: 23px;
            color: #A82400;
        }
        .profile-menu {
            display: flex;
            gap: 10px;
            margin-left: 90%;
        }
        .profile-menu img {
            border-radius: 50%;
            width: 35px;
            height: 35px;
        }
        .img-company{
            height: 30px; 
            width: 30px; 
            border-radius: 50%; 
            margin-left: 100%;
        }

        /* Responsive adjustments for smaller screens */
        
        @media (max-width: 1334px) {
            .header-logo {
                font-size: 1.25rem;
            }
            .profile-menu {
                gap: 0;
            }
            .profile-menu img {
                margin-left: 70%;
                width: 30px;
                height: 30px;
            }
            .nav-icons{
                gap: 10%;
                margin-left: 8%;
            }
            .nav-icons svg {
                margin: 0 100%;
                cursor: pointer;
                color: #A82400;
            }
            .img-company{
                margin-left: 10%;
            }
        }

        @media (max-width: 480px) {
            .header-logo {
                font-size: 1.1rem;
            }
            .profile-menu{
                margin-left: 0;
            }
            .profile-menu img {
                margin-left: 100%;
                width: 25px;
                height: 25px;
            }
            .nav-icons{
                gap: 8%;
                margin-left: 0%;
            }
            .nav-icons svg {
                margin: 0 100%;
                cursor: pointer;
                color: #A82400;
            }
        }
    </style>
</head>
<body>
    <header class="" id="">
        <!-- Logo -->
         <div class="d-flex" style="display: flex; margin-bottom: 25px;">
                <a href="/company-profile" class="header-logo">
                    <%if(community.thumbnail && community.thumbnail.url){%>
                        <img src="<%=community.thumbnail.url%>" alt="company logo" class="img-company">
                    <%} else {%>
                        <div class="w-10 h-10 rounded-full mr-3 bg-gray-300 flex items-center justify-center">
                            <i class="fas fa-users text-white"></i>
                        </div>
                    <%}%>
                    <!-- <h1 class="text-lg font-semibold"><%= community.title %></h1> -->
                </a>
             <div class="profile-menu" style="display: block; margin-left: 75%;">
                 <img src="https://via.placeholder.com/35" alt="Profile Picture">
             </div>
         </div>

        <!-- Navigation Icons -->
        <div class="nav-icons d-flex">
            <div id="home-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                    <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z"/>
                </svg>
            </div>
            <div id="link-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-link" viewBox="0 0 16 16">
                    <path d="M6.354 5.5H4a3 3 0 0 0 0 6h3a3 3 0 0 0 2.83-4H9q-.13 0-.25.031A2 2 0 0 1 7 10.5H4a2 2 0 1 1 0-4h1.535c.218-.376.495-.714.82-1z"/>
                    <path d="M9 5.5a3 3 0 0 0-2.83 4h1.098A2 2 0 0 1 9 6.5h3a2 2 0 1 1 0 4h-1.535a4 4 0 0 1-.82 1H12a3 3 0 1 0 0-6z"/>
                </svg>
            </div>
            <div id="video-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-video" viewBox="0 0 16 16" id="video-icon">
                    <path d="M8 9.05a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5"/>
                    <path d="M2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2zm10.798 11c-.453-1.27-1.76-3-4.798-3-3.037 0-4.345 1.73-4.798 3H2a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1z"/>
                </svg>
            </div>
            <div id="group-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-collection" viewBox="0 0 16 16">
                    <path d="M2.5 3.5a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1zm2-2a.5.5 0 0 1 0-1h7a.5.5 0 0 1 0 1zM0 13a1.5 1.5 0 0 0 1.5 1.5h13A1.5 1.5 0 0 0 16 13V6a1.5 1.5 0 0 0-1.5-1.5h-13A1.5 1.5 0 0 0 0 6zm1.5.5A.5.5 0 0 1 1 13V6a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-.5.5z"/>
                </svg>
            </div>
            <div id="notification-icon">
                <%if(notification.length>0){%>
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-app-indicator" viewBox="0 0 16 16">
                        <path d="M5.5 2A3.5 3.5 0 0 0 2 5.5v5A3.5 3.5 0 0 0 5.5 14h5a3.5 3.5 0 0 0 3.5-3.5V8a.5.5 0 0 1 1 0v2.5a4.5 4.5 0 0 1-4.5 4.5h-5A4.5 4.5 0 0 1 1 10.5v-5A4.5 4.5 0 0 1 5.5 1H8a.5.5 0 0 1 0 1z"/>
                        <path d="M16 3a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                    </svg>
                <%}else {%>
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-app" viewBox="0 0 16 16">
                        <path d="M11 2a3 3 0 0 1 3 3v6a3 3 0 0 1-3 3H5a3 3 0 0 1-3-3V5a3 3 0 0 1 3-3zM5 1a4 4 0 0 0-4 4v6a4 4 0 0 0 4 4h6a4 4 0 0 0 4-4V5a4 4 0 0 0-4-4z"/>
                    </svg>
                <%}%>
            </div>
            <div id="company-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-buildings" viewBox="0 0 16 16">
                    <path d="M14.763.075A.5.5 0 0 1 15 .5v15a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5V14h-1v1.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V10a.5.5 0 0 1 .342-.474L6 7.64V4.5a.5.5 0 0 1 .276-.447l8-4a.5.5 0 0 1 .487.022M6 8.694 1 10.36V15h5zM7 15h2v-1.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 .5.5V15h2V1.309l-7 3.5z"/>
                    <path d="M2 11h1v1H2zm2 0h1v1H4zm-2 2h1v1H2zm2 0h1v1H4zm4-4h1v1H8zm2 0h1v1h-1zm-2 2h1v1H8zm2 0h1v1h-1zm2-2h1v1h-1zm0 2h1v1h-1zM8 7h1v1H8zm2 0h1v1h-1zm2 0h1v1h-1zM8 5h1v1H8zm2 0h1v1h-1zm2 0h1v1h-1zm0-2h1v1h-1z"/>
                </svg>
            </div>
        </div>

    </header>
    <div id="dynamic-content">

    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script>
        
        document.getElementById('home-icon').addEventListener('click', async()=>{
            try{
                const response = await fetch('/community/<%=community.id%>/main');
                console.log(response);
                if(response.ok){
                    const html = await response.text();
                    document.getElementById('dynamic-content').innerHTML = html;
                }else{
                    console.error("Failed to fetch content:", response.statusText);
                }
            }catch(error){
                console.error("Error loading content:", error)
            }
        });
        document.getElementById('link-icon').addEventListener('click', async()=>{
            try{
                const response = await fetch('/community/<%=community.id%>/link');
                console.log(response);
                if(response.ok){
                    const html = await response.text();
                    document.getElementById('dynamic-content').innerHTML = html;
                }else{
                    console.error("Failed to fetch content:", response.statusText);
                }
            }catch(error){
                console.error("Error loading content:", error);
            }
        });

        document.getElementById('video-icon').addEventListener('click', async () => {
            try {
                const response = await fetch('/community/<%=community.id%>/posts'); // Fetch content
                console.log(response);
                if (response.ok) {
                    const html = await response.text(); // Get HTML as string
                    document.getElementById('dynamic-content').innerHTML = html; // Replace content
                } else {
                    console.error('Failed to fetch content:', response.statusText);
                }
            } catch (error) {
                console.error('Error loading content:', error);
            }
        });  

        document.getElementById('group-icon').addEventListener('click', async()=>{
            try{
                const response = await fetch('/community/<%=community.id%>/group');
                console.log(response);
                if(response.ok){
                    const html = await response.text();
                    document.getElementById('dynamic-content').innerHTML = html;
                }else{
                    console.error("Failed to fetch content:", response.statusText);
                }
            }catch(error){
                console.error("Error loading content:", error);
            }
        });

        document.getElementById("notification-icon").addEventListener('click', async()=>{
            try{
                const response = await fetch('/community/<%=community.id%>/notification');
                console.log(response);
                if(response.ok){
                    const html = await response.text();
                    document.getElementById('dynamic-content').innerHTML = html;
                }else{
                    console.error("Failed to fetch content:", response.statusText);
                }
            }catch(error){
                console.error("Error loading content:", error);
            }
        });

        document.getElementById("company-icon").addEventListener("click", async()=>{
            try{
                const response = await fetch("/community/<%=community.id%>/company");
                console.log(response);
                if(response.ok){
                    const html = await response.text();
                    document.getElementById('dynamic-content').innerHTML = html;
                }else{
                    console.error("Failed to fetch content:", response.statusText);
                }
            }catch(error){
                console.error("Error loading content:", error);
            }
        });
        
    </script>
</body>
</html>
