<%layout('/layouts/group-boilerplate.ejs')%>
<body>
    <style>
        :root {
            --primary: #A82400;
            --secondary: #d26041;
            --background: #FFF8F0;
        }
        
        body {
            background-color: #fdf2e9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .page-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }
        
        .header-banner {
            background-color: var(--background);
            padding: 1.5rem;
            border-bottom: 3px solid var(--primary);
            border-radius: 12px 12px 0 0;
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 12px rgba(168, 36, 0, 0.1);
        }
        
        .page-title {
            color: var(--primary);
            font-size: 2rem;
            font-weight: 600;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
        }
        
        .page-title::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 80px;
            height: 4px;
            background-color: var(--secondary);
            border-radius: 2px;
        }
        
        .create-button {
            background-color: var(--primary);
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 3px 8px rgba(168, 36, 0, 0.3);
            transition: all 0.3s ease;
        }
        
        .create-button:hover {
            transform: rotate(90deg);
            background-color: var(--secondary);
        }
        
        .create-button img {
            filter: brightness(10);
        }
        
        .groups-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(500px, 1fr));
            gap: 2rem;
        }
        
        .group-card {
            background: linear-gradient(135deg, var(--background) 0%, #ffe6d5 100%);
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(210, 96, 65, 0.15);
            transition: transform 0.3s ease;
            position: relative;
        }
        
        .group-card:hover {
            transform: translateY(-8px);
        }
        
        .group-card:hover::before {
            opacity: 1;
        }
        
        .group-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .group-inner {
            display: flex;
            height: 250px;
        }
        
        .group-details {
            flex: 1;
            padding: 1.5rem;
            position: relative;
        }
        
        .group-name {
            color: var(--primary);
            font-size: 1.5rem;
            font-weight: 400;
            margin-top: 0;
            margin-bottom: 1rem;
        }
        
        .description-container {
            position: relative;
            height: 130px;
            margin-top: 1rem;
            overflow: hidden;
        }
        
        .description {
            color: var(--secondary);
            line-height: 1.7;
            font-size: 1rem;
            height: 100%;
            overflow-y: auto;
            padding-right: 10px;
            position: relative;
        }
        
        .description::-webkit-scrollbar {
            width: 4px;
        }
        
        .description::-webkit-scrollbar-thumb {
            background-color: var(--secondary);
            border-radius: 10px;
        }
        
        .description-container::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 30px;
            background: linear-gradient(to top, rgba(255, 248, 240, 1), rgba(255, 248, 240, 0));
            pointer-events: none;
        }
        
        .group-image-container {
            width: 40%;
            position: relative;
            overflow: hidden;
        }
        
        .group-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }
        
        .group-card:hover .group-image {
            transform: scale(1.05);
        }
        
        .no-groups {
            grid-column: 1 / -1;
            text-align: center;
            color: var(--secondary);
            padding: 4rem 2rem;
            font-size: 1.2rem;
            background-color: var(--background);
            border-radius: 16px;
            border: 2px dashed var(--secondary);
        }
        
        .empty-state-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: var(--primary);
        }
        
        @media (max-width: 992px) {
            .groups-grid {
                grid-template-columns: 1fr;
            }
        }
        
        @media (max-width: 768px) {
            .group-inner {
                flex-direction: column-reverse;
                height: auto;
            }
            
            .group-image-container {
                width: 100%;
                height: 180px;
            }
            
            .description-container {
                height: 100px;
            }
            
            .header-banner {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }
            
            .page-title::after {
                left: 50%;
                transform: translateX(-50%);
            }
        }
    </style>

    <div class="page-container">
        <div class="header-banner">
            <h1 class="page-title">Think Tank</h1>
            <a href="/community/<%= community._id %>/groupForm" class="create-button" title="Create New Group">
                <img src="/groupCreate.png" alt="Create Group" height="24px" width="24px">
            </a>
        </div>

        <div class="groups-grid">
            <% if(groups && groups.length > 0) { %>
                <% for(let group of groups) { %>
                    <a href="/community/<%= community._id %>/groupchat" style="text-decoration: none;">
                        <div class="group-card">
                            <div class="group-inner">
                                <div class="group-details">
                                    <h2 class="group-name"><%= group.projectName %></h2>
                                    <div class="description-container">
                                        <p class="description"><%= group.projectDescription %></p>
                                    </div>
                                </div>
                                <div class="group-image-container">
                                    <img 
                                        src="<%= group.image.url %>" 
                                        alt="<%= group.projectName %>" 
                                        class="group-image"
                                        onerror="this.src='/default-group-image.png'; this.onerror='';"
                                    >
                                </div>
                            </div>
                        </div>
                    </a>
                <% } %>
            <% } else { %>
                <div class="no-groups">
                    <div class="empty-state-icon">ðŸ“‹</div>
                    <p>No think tanks available yet. Create your first one!</p>
                </div>
            <% } %>
        </div>
    </div>
</body>