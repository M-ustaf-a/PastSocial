<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Community Hub - VirtuHub</title>
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@200..800&display=swap" rel="stylesheet">
  
  <style>
    :root {
      --primary-color: #A82400;
      --primary-dark: #8A1E00;
      --secondary-color: #D63A0D;
      --accent-color: #FFEBCD;
      --bg-color: #FFEBCD;
      --card-bg: #FFF5E6;
      --hover-bg: #FFE4CC;
      --text-primary: #A82400;
      --text-secondary: #6B4423;
      --text-dark: #3A2317;
      --white: #FFFFFF;
      --shadow-sm: 0 2px 4px rgba(168, 36, 0, 0.08);
      --shadow-md: 0 4px 12px rgba(168, 36, 0, 0.12);
      --shadow-lg: 0 8px 24px rgba(168, 36, 0, 0.16);
      --radius-sm: 8px;
      --radius-md: 12px;
      --radius-lg: 16px;
      --radius-xl: 24px;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      background-color: var(--bg-color);
      font-family: 'Plus Jakarta Sans', sans-serif;
      color: var(--text-dark);
      line-height: 1.6;
      min-height: 100vh;
    }
    
    /* Header Styles */
    .header {
      background-color: var(--white);
      box-shadow: var(--shadow-sm);
      position: sticky;
      top: 0;
      z-index: 1000;
      transition: all 0.3s ease;
    }
    
    .header-content {
      max-width: 1400px;
      margin: 0 auto;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .brand {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      text-decoration: none;
      color: var(--primary-color);
      font-weight: 700;
      font-size: 1.25rem;
      transition: all 0.3s ease;
    }
    
    .brand:hover {
      color: var(--secondary-color);
      transform: translateX(5px);
    }
    
    .brand-icon {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      border-radius: var(--radius-sm);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      transition: all 0.3s ease;
    }
    
    .brand:hover .brand-icon {
      transform: rotate(10deg) scale(1.1);
    }
    
    /* Navigation */
    .nav-items {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    
    .nav-link {
      color: var(--text-secondary);
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: var(--radius-sm);
      transition: all 0.3s ease;
      font-weight: 500;
    }
    
    .nav-link:hover {
      background-color: var(--hover-bg);
      color: var(--primary-color);
    }
    
    /* Mobile Menu Toggle */
    .mobile-menu-toggle {
      display: none;
      background: none;
      border: none;
      cursor: pointer;
      padding: 0.5rem;
      color: var(--primary-color);
    }
    
    .mobile-menu-toggle svg {
      width: 24px;
      height: 24px;
    }
    
    /* Profile Menu */
    .profile-menu {
      position: relative;
    }
    
    .profile-button {
      background: none;
      border: none;
      cursor: pointer;
      padding: 0;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .profile-image {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: 3px solid var(--primary-color);
      transition: all 0.3s ease;
      object-fit: cover;
    }
    
    .profile-button:hover .profile-image {
      transform: scale(1.1);
      border-color: var(--secondary-color);
    }
    
    /* Hero Section */
    .hero-section {
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
      color: var(--white);
      padding: 4rem 0;
      margin-bottom: 3rem;
      position: relative;
      overflow: hidden;
    }
    
    .hero-section::before {
      content: "";
      position: absolute;
      width: 300px;
      height: 300px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      top: -150px;
      right: -100px;
    }
    
    .hero-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
      position: relative;
      z-index: 1;
    }
    
    .hero-title {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: 1rem;
      opacity: 0;
      animation: fadeInUp 0.8s ease forwards;
    }
    
    .hero-subtitle {
      font-size: 1.25rem;
      opacity: 0.9;
      margin-bottom: 2rem;
      opacity: 0;
      animation: fadeInUp 0.8s ease 0.2s forwards;
    }
    
    .hero-stats {
      display: flex;
      gap: 3rem;
      opacity: 0;
      animation: fadeInUp 0.8s ease 0.4s forwards;
      flex-wrap: wrap;
    }
    
    .stat-item {
      text-align: center;
      flex: 1;
      min-width: 120px;
    }
    
    .stat-number {
      font-size: 2.5rem;
      font-weight: 800;
      display: block;
    }
    
    .stat-label {
      font-size: 1rem;
      opacity: 0.9;
    }
    
    /* Search and Filter Bar */
    .search-filter-bar {
      max-width: 1200px;
      margin: -2rem auto 3rem;
      padding: 0 2rem;
      position: relative;
      z-index: 10;
    }
    
    .search-filter-container {
      background: var(--white);
      padding: 1.5rem;
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-lg);
      display: flex;
      gap: 1rem;
      align-items: center;
      flex-wrap: wrap;
    }
    
    .search-input {
      flex: 1;
      min-width: 300px;
      padding: 0.75rem 1.25rem;
      border: 2px solid var(--hover-bg);
      border-radius: var(--radius-md);
      font-size: 1rem;
      transition: all 0.3s ease;
    }
    
    .search-input:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px rgba(168, 36, 0, 0.1);
    }
    
    .filter-button {
      padding: 0.75rem 1.5rem;
      background: var(--hover-bg);
      border: none;
      border-radius: var(--radius-md);
      color: var(--text-primary);
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .filter-button:hover {
      background: var(--primary-color);
      color: var(--white);
      transform: translateY(-2px);
    }
    
    /* Main Content */
    .main-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem 4rem;
    }
    
    /* Section Header */
    .section-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .section-title {
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--text-dark);
    }
    
    .view-toggle {
      display: flex;
      gap: 0.5rem;
      background: var(--hover-bg);
      padding: 0.25rem;
      border-radius: var(--radius-sm);
    }
    
    .view-button {
      padding: 0.5rem 1rem;
      background: none;
      border: none;
      border-radius: var(--radius-sm);
      cursor: pointer;
      transition: all 0.3s ease;
      color: var(--text-secondary);
    }
    
    .view-button.active {
      background: var(--white);
      color: var(--primary-color);
      box-shadow: var(--shadow-sm);
    }
    
    /* Community Grid */
    .community-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }
    
    /* Community Card */
    .community-card {
      background: var(--white);
      border-radius: var(--radius-lg);
      overflow: hidden;
      transition: all 0.3s ease;
      box-shadow: var(--shadow-sm);
      position: relative;
      opacity: 0;
      animation: fadeInUp 0.6s ease forwards;
      animation-delay: calc(var(--card-index) * 0.1s);
    }
    
    .community-card:hover {
      transform: translateY(-8px);
      box-shadow: var(--shadow-lg);
    }
    
    .card-badge {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background: var(--primary-color);
      color: var(--white);
      padding: 0.25rem 0.75rem;
      border-radius: var(--radius-sm);
      font-size: 0.75rem;
      font-weight: 600;
      z-index: 10;
    }
    
    .card-image-container {
      position: relative;
      height: 200px;
      overflow: hidden;
      background: linear-gradient(135deg, var(--hover-bg), var(--card-bg));
    }
    
    .card-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: all 0.3s ease;
    }
    
    .community-card:hover .card-image {
      transform: scale(1.1);
    }
    
    .card-content {
      padding: 1.5rem;
    }
    
    .card-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 0.5rem;
      transition: color 0.3s ease;
    }
    
    .community-card:hover .card-title {
      color: var(--primary-color);
    }
    
    .card-description {
      color: var(--text-secondary);
      font-size: 0.9rem;
      margin-bottom: 1rem;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .card-stats {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 1rem;
      border-top: 1px solid var(--hover-bg);
      flex-wrap: wrap;
      gap: 0.5rem;
    }
    
    .stat-group {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--text-secondary);
      font-size: 0.875rem;
    }
    
    .stat-icon {
      width: 18px;
      height: 18px;
      color: var(--primary-color);
    }
    
    .card-admin {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .admin-avatar {
      width: 28px;
      height: 28px;
      border-radius: 50%;
      border: 2px solid var(--primary-color);
      object-fit: cover;
    }
    
    .admin-name {
      font-size: 0.875rem;
      color: var(--text-secondary);
      font-weight: 500;
    }
    
    /* Join Button */
    .join-button {
      width: 100%;
      padding: 0.75rem;
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      color: var(--white);
      border: none;
      border-radius: var(--radius-md);
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 1rem;
    }
    
    .join-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(168, 36, 0, 0.3);
    }
    
    /* Create Community CTA */
    .create-community-cta {
      background: linear-gradient(135deg, var(--card-bg), var(--hover-bg));
      border-radius: var(--radius-lg);
      padding: 3rem;
      text-align: center;
      margin-top: 3rem;
    }
    
    .cta-title {
      font-size: 2rem;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 1rem;
    }
    
    .cta-description {
      font-size: 1.1rem;
      color: var(--text-secondary);
      margin-bottom: 2rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }
    
    .cta-button {
      display: inline-block;
      padding: 1rem 2rem;
      background: var(--primary-color);
      color: var(--white);
      text-decoration: none;
      border-radius: var(--radius-xl);
      font-weight: 600;
      transition: all 0.3s ease;
    }
    
    .cta-button:hover {
      background: var(--primary-dark);
      transform: translateY(-3px);
      box-shadow: 0 10px 20px rgba(168, 36, 0, 0.3);
    }
    
    /* Dropdown */
    .custom-dropdown {
      position: absolute;
      top: 100%;
      right: 0;
      margin-top: 0.5rem;
      background: var(--white);
      border-radius: var(--radius-md);
      box-shadow: var(--shadow-lg);
      min-width: 200px;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.3s ease;
    }
    
    .dropdown-open .custom-dropdown {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
    
    .dropdown-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      color: var(--text-dark);
      text-decoration: none;
      transition: all 0.3s ease;
    }
    
    .dropdown-item:hover {
      background: var(--hover-bg);
      color: var(--primary-color);
    }
    
    .dropdown-icon {
      width: 20px;
      height: 20px;
    }
    
    /* Animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    /* Loading State */
    .skeleton {
      background: linear-gradient(90deg, var(--hover-bg) 25%, var(--card-bg) 50%, var(--hover-bg) 75%);
      background-size: 200% 100%;
      animation: loading 1.5s infinite;
    }
    
    @keyframes loading {
      0% { background-position: 200% 0; }
      100% { background-position: -200% 0; }
    }
    
    /* Responsive Styles */
    
    /* Large Tablets and Small Desktops */
    @media (max-width: 1024px) {
      .hero-content {
        padding: 0 1.5rem;
      }
      
      .search-filter-bar {
        padding: 0 1.5rem;
      }
      
      .main-content {
        padding: 0 1.5rem 3rem;
      }
      
      .community-grid {
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
      }
      
      .cta-title {
        font-size: 1.75rem;
      }
    }
    
    /* Tablets */
    @media (max-width: 768px) {
      .header-content {
        padding: 1rem 1.5rem;
      }
      
      .nav-items {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: var(--white);
        box-shadow: var(--shadow-md);
        flex-direction: column;
        padding: 1rem;
        gap: 0.5rem;
      }
      
      .nav-items.mobile-open {
        display: flex;
      }
      
      .mobile-menu-toggle {
        display: block;
      }
      
      .hero-section {
        padding: 3rem 0;
      }
      
      .hero-title {
        font-size: 2rem;
      }
      
      .hero-subtitle {
        font-size: 1.1rem;
      }
      
      .hero-stats {
        gap: 2rem;
        justify-content: space-around;
      }
      
      .stat-number {
        font-size: 2rem;
      }
      
      .stat-label {
        font-size: 0.875rem;
      }
      
      .search-filter-container {
        flex-direction: column;
        padding: 1.25rem;
      }
      
      .search-input {
        width: 100%;
        min-width: auto;
      }
      
      .filter-button {
        width: 100%;
        justify-content: center;
      }
      
      .community-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      }
      
      .section-header {
        flex-direction: column;
        align-items: flex-start;
      }
      
      .create-community-cta {
        padding: 2rem 1.5rem;
      }
      
      .cta-description {
        font-size: 1rem;
      }
    }
    
    /* Large Mobile */
    @media (max-width: 640px) {
      .community-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }
      
      .hero-stats {
        flex-direction: column;
        gap: 1.5rem;
        align-items: center;
      }
      
      .stat-item {
        min-width: auto;
      }
    }
    
    /* Small Mobile */
    @media (max-width: 480px) {
      .header-content {
        padding: 1rem;
      }
      
      .brand span {
      }
      
      .brand-icon {
        width: 36px;
        height: 36px;
        font-size: 1.25rem;
      }
      
      .profile-image {
        width: 36px;
        height: 36px;
      }
      
      .hero-section {
        padding: 2.5rem 0;
        margin-bottom: 2rem;
      }
      
      .hero-content {
        padding: 0 1rem;
      }
      
      .hero-title {
        font-size: 1.75rem;
        line-height: 1.3;
      }
      
      .hero-subtitle {
        font-size: 1rem;
        margin-bottom: 1.5rem;
      }
      
      .stat-number {
        font-size: 1.75rem;
      }
      
      .stat-label {
        font-size: 0.8rem;
      }
      
      .search-filter-bar {
        padding: 0 1rem;
        margin: -1.5rem auto 2rem;
      }
      
      .search-filter-container {
        padding: 1rem;
        gap: 0.75rem;
      }
      
      .search-input {
        padding: 0.625rem 1rem;
        font-size: 0.9rem;
      }
      
      .filter-button {
        padding: 0.625rem 1.25rem;
        font-size: 0.9rem;
      }
      
      .main-content {
        padding: 0 1rem 3rem;
      }
      
      .section-title {
        font-size: 1.5rem;
      }
      
      .view-toggle {
        width: 100%;
      }
      
      .view-button {
        flex: 1;
        padding: 0.4rem 0.75rem;
        font-size: 0.875rem;
      }
      
      .card-content {
        padding: 1.25rem;
      }
      
      .card-title {
        font-size: 1.125rem;
      }
      
      .card-description {
        font-size: 0.875rem;
      }
      
      .card-stats {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.75rem;
      }
      
      .stat-group,
      .card-admin {
        font-size: 0.8rem;
      }
      
      .admin-avatar {
        width: 24px;
        height: 24px;
      }
      
      .join-button {
        padding: 0.625rem;
        font-size: 0.9rem;
      }
      
      .create-community-cta {
        padding: 1.5rem 1rem;
        margin-top: 2rem;
      }
      
      .cta-title {
        font-size: 1.5rem;
        line-height: 1.3;
      }
      
      .cta-description {
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
      }
      
      .cta-button {
        padding: 0.875rem 1.5rem;
        font-size: 0.9rem;
      }
      
      .custom-dropdown {
        left: auto;
        right: -1rem;
        min-width: 180px;
      }
      
      .dropdown-item {
        padding: 0.625rem 0.875rem;
        font-size: 0.875rem;
      }
      
      .dropdown-icon {
        width: 18px;
        height: 18px;
      }
    }
    
    /* Extra Small Mobile */
    @media (max-width: 360px) {
      .hero-title {
        font-size: 1.5rem;
      }
      
      .hero-subtitle {
        font-size: 0.9rem;
      }
      
      .section-title {
        font-size: 1.25rem;
      }
      
      .card-image-container {
        height: 160px;
      }
      
      .cta-title {
        font-size: 1.25rem;
      }
    }
    
    /* Touch Device Optimizations */
    @media (hover: none) {
      .community-card:active {
        transform: scale(0.98);
      }
      
      .join-button:active,
      .cta-button:active,
      .filter-button:active {
        transform: scale(0.95);
      }
    }
    
    /* Print Styles */
    @media print {
      .header,
      .search-filter-bar,
      .view-toggle,
      .join-button,
      .create-community-cta {
        display: none;
      }
      
      .hero-section {
        background: none;
        color: var(--text-dark);
        padding: 1rem 0;
      }
      
      .community-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
      }
      
      .community-card {
        box-shadow: none;
        border: 1px solid #ddd;
        page-break-inside: avoid;
      }
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="header">
    <div class="header-content">
      <a href="/community" class="brand">
        <div class="brand-icon">üåê</div>
        <span>VirtuHub</span>
      </a>
      
      <button class="mobile-menu-toggle" onclick="toggleMobileMenu()">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      
      <nav class="nav-items" id="navItems">
        <a href="#" class="nav-link">Explore</a>
        <a href="#" class="nav-link">Trending</a>
        <a href="#" class="nav-link">Categories</a>
        
        <% if(user) { %>
          <div class="profile-menu">
            <button class="profile-button" onclick="toggleDropdown(this)">
              <img src="<%=user.image.url%>" alt="Profile" class="profile-image" />
            </button>
            <div class="custom-dropdown">
              <a class="dropdown-item" href="/community/<%=user.id%>">
                <svg class="dropdown-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                My Profile
              </a>
              <a class="dropdown-item" href="/createCommunity">
                <svg class="dropdown-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Create Community
              </a>
              <hr style="margin: 0.5rem 0;">
              <a class="dropdown-item" href="/userlogout">
                <svg class="dropdown-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                Logout
              </a>
            </div>
          </div>
        <% } else { %>
          <a href="/userlogin" class="cta-button" style="padding: 0.5rem 1.5rem; font-size: 0.9rem;">Sign In</a>
        <% } %>
      </nav>
    </div>
  </header>
  
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">Discover Communities That Matter</h1>
      <p class="hero-subtitle">Connect with like-minded people and build your virtual business</p>
      <div class="hero-stats">
        <div class="stat-item">
          <span class="stat-number"><%=Communities.length%></span>
          <span class="stat-label">Active Communities</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">10K+</span>
          <span class="stat-label">Members</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">50K+</span>
          <span class="stat-label">Virtual Products</span>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Search and Filter Bar -->
  <div class="search-filter-bar">
    <div class="search-filter-container">
      <input type="text" class="search-input" placeholder="Search communities by name, topic, or interest..." />
      <button class="filter-button">
        <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
        </svg>
        Filter
      </button>
      <button class="filter-button">
        <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
        </svg>
        Sort
      </button>
    </div>
  </div>
  
  <!-- Main Content -->
  <main class="main-content">
    <!-- Section Header -->
    <div class="section-header">
      <h2 class="section-title">All Communities</h2>
      <div class="view-toggle">
        <button class="view-button active">Grid</button>
        <button class="view-button">List</button>
      </div>
    </div>
    
    <!-- Community Grid -->
    <div class="community-grid">
      <% Communities.forEach((community, index) => { %>
        <article class="community-card" style="--card-index: <%=index%>;">
          <% if(community.featured) { %>
            <span class="card-badge">Featured</span>
          <% } %>
          
          <a href="/community/<%= community._id %>/main" style="text-decoration: none; color: inherit;">
            <div class="card-image-container">
              <img src="<%=community.thumbnail.url%>" alt="<%=community.title%>" class="card-image" />
            </div>
          </a>
          
          <div class="card-content">
            <h3 class="card-title"><%=community.title%></h3>
            <p class="card-description"><%=community.description || 'A vibrant community where members connect, share ideas, and build amazing virtual products together.'%></p>
            
            <div class="card-stats">
              <div class="stat-group">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
                <span><%=community.memberCount || 0%> members</span>
              </div>
              
              <div class="card-admin">
                <img src="<%=community.useradmin.image.url%>" alt="Admin" class="admin-avatar" />
                <span class="admin-name"><%=community.useradmin.name || 'Admin'%></span>
              </div>
            </div>
          </div>
        </article>
      <% }); %>
    </div>
    
    <!-- Create Community CTA -->
    <div class="create-community-cta">
      <h2 class="cta-title">Ready to Build Your Own Community?</h2>
      <p class="cta-description">Create a space for your tribe, start your virtual business, and connect with people who share your vision.</p>
      <a href="/createCommunity" class="cta-button">Create Your Community</a>
    </div>
  </main>
  
  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script>
    // Toggle mobile menu
    function toggleMobileMenu() {
      const navItems = document.getElementById('navItems');
      navItems.classList.toggle('mobile-open');
      
      // Close menu when clicking outside
      if (navItems.classList.contains('mobile-open')) {
        document.addEventListener('click', function closeMobileMenu(e) {
          const header = document.querySelector('.header');
          if (!header.contains(e.target)) {
            navItems.classList.remove('mobile-open');
            document.removeEventListener('click', closeMobileMenu);
          }
        });
      }
    }
    
    // Toggle dropdown
    function toggleDropdown(button) {
      const menu = button.closest('.profile-menu');
      menu.classList.toggle('dropdown-open');
      
      // Close dropdown when clicking outside
      document.addEventListener('click', function closeDropdown(e) {
        if (!menu.contains(e.target)) {
          menu.classList.remove('dropdown-open');
          document.removeEventListener('click', closeDropdown);
        }
      });
    }
    
    // Image lazy loading
    document.addEventListener('DOMContentLoaded', function() {
      const images = document.querySelectorAll('.card-image');
      
      // Intersection Observer for lazy loading
      if ('IntersectionObserver' in window) {
        const imageObserver = new IntersectionObserver((entries, observer) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              const img = entry.target;
              img.style.opacity = '1';
              imageObserver.unobserve(img);
            }
          });
        });
        
        images.forEach(img => imageObserver.observe(img));
      }
      
      images.forEach(img => {
        img.addEventListener('load', function() {
          this.style.opacity = '1';
        });
        
        img.addEventListener('error', function() {
          this.src = 'data:image/svg+xml;base64,';
        });
      });
      
      // Search functionality
      const searchInput = document.querySelector('.search-input');
      const communityCards = document.querySelectorAll('.community-card');
      
      searchInput.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        
        communityCards.forEach(card => {
          const title = card.querySelector('.card-title').textContent.toLowerCase();
          const description = card.querySelector('.card-description').textContent.toLowerCase();
          
          if (title.includes(searchTerm) || description.includes(searchTerm)) {
            card.style.display = 'block';
          } else {
            card.style.display = 'none';
          }
        });
      });
      
      // View toggle functionality
      const viewButtons = document.querySelectorAll('.view-button');
      const grid = document.querySelector('.community-grid');
      
      viewButtons.forEach(button => {
        button.addEventListener('click', function() {
          viewButtons.forEach(btn => btn.classList.remove('active'));
          this.classList.add('active');
          
          if (this.textContent === 'List') {
            grid.style.gridTemplateColumns = '1fr';
            grid.style.maxWidth = '800px';
            grid.style.margin = '0 auto';
          } else {
            grid.style.gridTemplateColumns = '';
            grid.style.maxWidth = '';
            grid.style.margin = '';
          }
        });
      });
      
      // Add smooth scroll behavior
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });
      
      // Header scroll effect
      const header = document.querySelector('.header');
      let lastScroll = 0;
      
      window.addEventListener('scroll', () => {
        const currentScroll = window.pageYOffset;
        
        if (currentScroll > 100) {
          header.style.boxShadow = 'var(--shadow-md)';
        } else {
          header.style.boxShadow = 'var(--shadow-sm)';
        }
        
        lastScroll = currentScroll;
      });
      
      // Join button interaction
      const joinButtons = document.querySelectorAll('.join-button');
      
      joinButtons.forEach(button => {
        button.addEventListener('click', function(e) {
          e.preventDefault();
          const originalText = this.textContent;
          this.textContent = 'Joined!';
          this.style.background = '#4CAF50';
          
          setTimeout(() => {
            this.textContent = originalText;
            this.style.background = '';
          }, 2000);
        });
      });
      
      // Filter and sort functionality placeholder
      const filterButton = document.querySelectorAll('.filter-button')[0];
      const sortButton = document.querySelectorAll('.filter-button')[1];
      
      filterButton.addEventListener('click', function() {
        alert('Filter functionality coming soon!');
      });
      
      sortButton.addEventListener('click', function() {
        alert('Sort functionality coming soon!');
      });
      
      // Handle window resize
      let resizeTimer;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(() => {
          // Reset any inline styles that might have been applied
          if (window.innerWidth > 768) {
            document.getElementById('navItems').classList.remove('mobile-open');
          }
        }, 250);
      });
      
      // Improve touch responsiveness
      if ('ontouchstart' in window) {
        document.body.classList.add('touch-device');
      }
    });
  </script>
</body>
</html>