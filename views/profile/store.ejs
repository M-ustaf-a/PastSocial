<%-layout("./layouts/profile-boilerplate.ejs")%>

<style>
    .content-tabs {
        display: flex;
        margin-bottom: 20px;
        border-bottom: 2px solid rgba(168, 36, 0, 0.2);
        padding-bottom: 10px;
    }

    .tab {
        padding: 10px 20px;
        cursor: pointer;
        position: relative;
        margin-left: 20%;
    }
    .tab-icon {
        fill: currentColor;
        color: #A82400;
        opacity: 0.5; /* Make non-active tabs slightly transparent */
    }
    
    .tab.active .tab-icon {
        opacity: 1; 
    }
    
    /* Remove these previous rules since we're handling it differently now */
    .bookmark-tab svg {
        color: #A82400;
        fill: #A82400;
    }
    .tab.active {
        font-weight: bold;
    }

    .tab.active::after {
        content: '';
        position: absolute;
        bottom: -12px;
        left: 0;
        width: 100%;
        height: 2px;
        background: #A82400;
    }

    a svg{
        color:#A82400;
    }

    /* Content Grid */
    .content-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr); /* Changed to show exactly 3 columns */
        gap: 20px;
        margin-bottom: 20px;
        margin-left: 25%;
        max-width: 1200px; /* Added to control maximum width */
        margin-right: 25%;
    }

    .content-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .content-card:hover {
        transform: translateY(-5px);
    }

    .content-image {
        width: 100%;
        height: 150px;
        background: #A82400;
        position: relative;
    }
    .content-image-url{
        width: 100%;
        height: 150px;
        position: relative;
    }

    .content-details {
        padding: 15px;
    }

    .content-title {
        font-size: 16px;
        margin-bottom: 5px;
    }

    .content-meta {
        font-size: 12px;
        opacity: 0.8;
        display: flex;
        justify-content: space-between;
    }

    a{
        text-decoration: none;
        color: #A82400;
    }

    .active-indicator {
        width: 8px;
        height: 8px;
        background: #4CAF50;
        border-radius: 50%;
    }
</style>

<body>
    
    <div class="content-grid">
        <%for(community of communities){%>
            <div class="content-card">
                <a href="/community/<%= community._id %>/main">

                    <%if(community.thumbnail.url){%>
                        <div class="content-image-url">
                            <img src="<%=community.thumbnail.url%>" alt="" style="width: 100%; height: 100%; object-fit: cover; border-radius: 19px 19px 0 0;">
                        </div>
                    <%}else{%>
                        <div class="content-image">
                            <img src="<%=community.thumbnail.url%>" alt="">
                        </div>
                    <%}%>
                    <div class="content-details">
                        <h3 class="content-title"><%=community.title%></h3>
                        <div class="interaction-bar">
                            <div class="interaction-item">
                                <span>45k</span> users
                            </div>
                            <div class="interaction-item">
                                <span class="active-indicator"></span>
                                <span>1000</span> Active
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        <%}%>
    </div>
</body>
</html>