<%- layout('/layouts/boilerplate.ejs') %>

<style>
    :root {
        --primary-color: #A82400;
        --primary-hover: #8A1F00;
        --bg-color: #FFF8F0;
        --card-bg: #FFFFFF;
        --card-border: #A82400;
        --text-primary: #A82400;
        --text-secondary: #4A5568;
        --text-accent: #A82400;
        --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
        --shadow-md: 0 4px 6px rgba(0,0,0,0.07);
        --border-radius-lg: 16px;
        --border-radius-md: 12px;
        --border-radius-sm: 8px;
    }

    body {
        background-color: var(--bg-color);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        color: var(--text-primary);
        line-height: 1.5;
        padding-top: 120px;
    }
    
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 1.5rem 1rem;
    }

    .content-card {
        background-color: var(--card-bg);
        border-radius: var(--border-radius-lg);
        border: 1px solid var(--card-border);
        box-shadow: var(--shadow-md);
        overflow: hidden;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .content-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 15px rgba(0,0,0,0.1);
    }

    .post-header {
        display: flex;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }

    .profile-link {
        text-decoration: none;
        color: inherit;
    }

    .profile-img {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid var(--card-border);
    }

    .user-info {
        margin-left: 0.75rem;
    }

    .username {
        font-weight: 600;
        color: var(--text-accent);
        margin: 0;
    }

    .post-time {
        font-size: 0.75rem;
        color: var(--text-secondary);
        margin: 0;
    }

    .post-body {
        padding: 1rem;
    }

    .post-title {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }

    .post-content {
        font-size: 1rem;
        color: #7e1b00;
        line-height: 1.6;
        max-height: 150px;
        overflow-y: auto;
        margin-bottom: 1rem;
    }

    .post-image-container {
        width: 100%;
        max-height: 350px;
        overflow: hidden;
        border-radius: var(--border-radius-md);
        margin: 1rem 0;
    }

    .post-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .post-image:hover {
        transform: scale(1.02);
    }

    .interaction-bar {
        display: flex;
        padding: 0.75rem 1rem;
        border-top: 1px solid rgba(0,0,0,0.05);
        background-color: rgba(249, 250, 251, 0.5);
    }

    .interaction-button {
        display: flex;
        align-items: center;
        background: none;
        border: none;
        padding: 0.5rem 1rem;
        margin-right: 1rem;
        border-radius: var(--border-radius-sm);
        color: var(--text-secondary);
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .interaction-button:hover {
        background-color: rgba(0,0,0,0.03);
        color: var(--primary-color);
    }

    .interaction-button svg {
        margin-right: 0.5rem;
    }

    /* Post Creation Form */
    .post-form {
        margin-bottom: 2rem;
    }

    .form-card {
        background-color: var(--card-bg);
        border-radius: var(--border-radius-lg);
        border: 1px solid var(--card-border);
        box-shadow: var(--shadow-md);
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .form-header {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }

    .form-title {
        font-weight: 600;
        margin-left: 1rem;
        color: var(--text-primary);
    }

    .input-group {
        margin-bottom: 1rem;
    }

    .form-input {
        width: 100%;
        padding: 0.75rem 1rem;
        border-radius: var(--border-radius-sm);
        border: 1px solid var(--card-border);
        background-color: rgba(249, 250, 251, 0.8);
        font-size: 1rem;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(168, 36, 0, 0.1);
    }

    .form-textarea {
        min-height: 100px;
        resize: vertical;
    }

    .form-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
    }

    .file-input-wrapper {
        position: relative;
    }

    .file-input {
        opacity: 0;
        width: 0.1px;
        height: 0.1px;
        position: absolute;
    }

    .file-input-label {
        display: flex;
        align-items: center;
        padding: 0.5rem 1rem;
        background-color: rgba(0,0,0,0.05);
        border-radius: var(--border-radius-sm);
        cursor: pointer;
        font-weight: 500;
        color: var(--text-primary);
        transition: all 0.2s ease;
    }

    .file-input-label:hover {
        background-color: rgba(0,0,0,0.08);
    }

    .file-input-label svg {
        margin-right: 0.5rem;
        color: #A82400;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 9999px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: white;
    }

    .btn-primary:hover {
        background-color: var(--primary-hover);
    }

    /* Responsive Adjustments */
    @media (max-width: 640px) {
        .container {
            padding: 1rem 0.5rem;
        }

        .form-footer {
            flex-direction: column;
            align-items: stretch;
        }

        .file-input-wrapper {
            margin-bottom: 1rem;
        }

        .btn {
            width: 100%;
        }

        .interaction-bar {
            justify-content: space-around;
            padding: 0.5rem;
        }

        .interaction-button {
            margin-right: 0;
            padding: 0.5rem;
        }

        .interaction-button span {
            display: none;
        }

        .interaction-button svg {
            margin-right: 0;
        }
    }
</style>

<div class="container">
    <% if(currUser && currUser.communityId === communityId) { %>
        <form action="/community/<%= community.id %>/main" method="post" enctype="multipart/form-data" class="post-form">
            <div class="form-card">
                <div class="form-header">
                    <a href="/community/<%=community.id%>/<%=currUser.id%>/showProfile" class="profile-link">
                        <img src="<%= currUser.image.url %>" class="profile-img" alt="<%= currUser.name %>'s profile">
                    </a>
                    <h3 class="form-title">Create a new post</h3>
                </div>
                
                <div class="input-group">
                    <input 
                        type="text" 
                        name="upload[title]" 
                        placeholder="Add a title to your post" 
                        class="form-input" 
                        required
                    >
                </div>
                
                <div class="input-group">
                    <textarea 
                        name="upload[content]" 
                        placeholder="What's on your mind today?" 
                        class="form-input form-textarea" 
                        required
                    ></textarea>
                </div>
                
                <div class="form-footer">
                    <div class="file-input-wrapper">
                        <input type="file" name="upload[image]" id="file-upload" class="file-input" required>
                        <label for="file-upload" class="file-input-label">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M4.502 9a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"/>
                                <path d="M14.002 13a2 2 0 0 1-2 2h-10a2 2 0 0 1-2-2V5A2 2 0 0 1 2 3a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v8a2 2 0 0 1-1.998 2zM14 2H4a1 1 0 0 0-1 1h9.002a2 2 0 0 1 2 2v7A1 1 0 0 0 15 11V3a1 1 0 0 0-1-1zM2.002 4a1 1 0 0 0-1 1v8l2.646-2.354a.5.5 0 0 1 .63-.062l2.66 1.773 3.71-3.71a.5.5 0 0 1 .577-.094l1.777 1.947V5a1 1 0 0 0-1-1h-10z"/>
                            </svg>
                            Add Image
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary">Publish Post</button>
                </div>
            </div>
        </form>
    <% } %>
    
    <main>
        <% for(let uploadPost of newUploadPost) { %>
            <article class="content-card mb-6">
                <div class="post-header">
                    <a href="/community/<%= community.id %>/<%= uploadPost.user.id %>/showProfile" class="profile-link">
                        <img src="<%= uploadPost.user.image.url %>" class="profile-img" alt="<%= uploadPost.user.name %>'s profile">
                    </a>
                    <div class="user-info">
                        <h3 class="username"><%= uploadPost.user.name %></h3>
                        <p class="post-time">
                            <!-- Add time formatting if available -->
                            <%= new Date().toLocaleDateString() %>
                        </p>
                    </div>
                </div>
                
                <div class="post-body">
                    <h2 class="post-title"><%= uploadPost.title %></h2>
                    <div class="post-content"><%= uploadPost.content %></div>
                    
                    <% if(uploadPost.image && uploadPost.image.url) { %>
                        <div class="post-image-container">
                            <a href="<%= uploadPost.image.url %>" target="_blank">
                                <img src="<%= uploadPost.image.url %>" alt="Post image" class="post-image">
                            </a>
                        </div>
                    <% } %>
                </div>
                
                <div class="interaction-bar">
                    <button class="interaction-button like-button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                            <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                        </svg>
                        <span>Like</span>
                    </button>
                    
                    <button class="interaction-button comment-button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                            <path d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"/>
                        </svg>
                        <span>Comment</span>
                    </button>
                    
                    <button class="interaction-button share-button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M13.5 1a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.499 2.499 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5zm-8.5 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zm11 5.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3z"/>
                        </svg>
                        <span>Share</span>
                    </button>
                </div>
            </article>
        <% } %>
    </main>
</div>

<script>
    // Client-side JavaScript can be added here for enhanced interactivity
    document.addEventListener('DOMContentLoaded', function() {
        // File input preview functionality
        const fileInput = document.getElementById('file-upload');
        if (fileInput) {
            fileInput.addEventListener('change', function() {
                const fileName = this.files[0]?.name;
                if (fileName) {
                    // You could add code here to show the selected filename
                    const label = this.nextElementSibling;
                    label.textContent = fileName.length > 20 ? 
                        fileName.substring(0, 17) + '...' : fileName;
                }
            });
        }
        
        // Add event listeners for interaction buttons if needed
    });
</script>