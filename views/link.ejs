<% layout('/layouts/boilerplate.ejs') %>

<style>
    body{
        padding-top: 121px;
    }
    .grid-wrapper {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        max-width: 1400px;
        margin: 0 auto;
        margin-top: 10px;
    }

    .container {
        border: 1px solid #f9d8a6;
        background-color: #fee4bd;
        height: auto;
        border-radius: 10px;
        width: 100%;
        padding: 20px;
    }

    .box {
        display: flex;
        gap: 20px;
        width: auto;
    }

    h1 {
        color: #A82400;
        margin: 0;
    }

    .box img {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        border: 2px solid #A82400;
        object-fit: cover;
    }

    .role {
        color: #616060;
        display: block;
        margin-bottom: 8px;
    }

    .button-group {
        display: flex;
        gap: 10px;
    }

    .follow-btn, .link-btn {
        padding: 3px 10px;
        border: 2px solid #A82400;
        border-radius: 20px;
        cursor: pointer;
        transition: all 0.3s ease;
        background: none;
        color: #A82400;
    }

    .follow-btn:hover, .link-btn:hover {
        background-color: #A82400;
        color: blanchedalmond;
    }

    .followed {
        background-color: #A82400;
        color: blanchedalmond;
    }
    @media (max-width: 1200px) {
        .grid-wrapper {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    @media (max-width: 768px) {
        .grid-wrapper {
            grid-template-columns: 1fr;
            width: 100%;
        }
        .container {
            border-radius: 0;
            margin-top: 0px;
            max-width: 768px;
            background-color: rgb(255, 230, 194);
        }
    }

    @media (max-width: 480px) {
        .grid-wrapper{
            gap: 0.1px;
        }
        .container {
            border-radius: 0;
            background-color: rgb(255, 230, 194);
        }
    }

</style>
<body>
    <div class="grid-wrapper">
        <% users.forEach(user => { %>
            <%if(user.communityId === communityId){%>
                <div class="container">
                    <div class="box">
                        <img src="<%= user.image ? user.image.url : '/default-avatar.png' %>" alt="profile-img">
                        <div>
                            <a href="/community/<%= community.id %>/<%= user.id %>/showProfile" style="text-decoration: none; color: inherit;">
                                <h1><%= user.name %></h1>
                                <small class="role"><%= user.role %> at <%= user.company %></small>
                            </a>
                            <div class="button-group">
                                <button class="follow-btn" onclick="handleFollow('<%= user.id %>', this)">Follow</button>
                                <button class="link-btn" onclick="handleLink('<%= user.id %>', this)">Link</button>
                            </div>
                        </div>
                    </div>
                </div>
            <%}%>
        <% }) %>
    </div>
</body>

<script>
async function handleFollow(userId, button) {
    try {
        const response = await fetch('/follow', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ userId })
        });

        if (response.ok) {
            button.classList.toggle('followed');
            button.textContent = button.classList.contains('followed') ? 'Following' : 'Follow';
        } else {
            console.error('Failed to follow');
        }
    } catch (error) {
        console.error('Error:', error);
    }
}

async function handleLink(userId, button) {
    try {
        const response = await fetch('/link', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ userId })
        });

        if (response.ok) {
            button.classList.toggle('followed');
            button.textContent = button.classList.contains('followed') ? 'Linked' : 'Link';
        } else {
            console.error('Failed to link');
        }
    } catch (error) {
        console.error('Error:', error);
    }
}
</script>
